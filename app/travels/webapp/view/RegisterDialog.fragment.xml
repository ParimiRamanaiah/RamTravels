<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Dialog id="registerDialog" title="User Registration" draggable="true" resizable="true">
    <VBox class="sapUiSmallMargin">
      <Label text="First Name:"></Label>
      <Input placeholder="Enter First Name" id="firstName"/>
      <Label text="Last Name:"></Label>
      <Input placeholder="Enter Last Name" id="lastName"/>
      <Label text="Mobile Number:"></Label>
      <Input placeholder="Enter Mobile Number" id="mobileNumber" type="Tel"/>
      <Label text="Gender:"></Label>
      <Input placeholder="Enter Gender" id="gender"/>
      <Label text="Email Id:"></Label>
      <Input placeholder="Enter Email Id" id="emailId" type="Email"/>
      <Label text="Password:"></Label>
      <Input placeholder="Enter Password" id="password" type="Password"/>
    </VBox>
    <beginButton>
      <Button text="Submit" type="Emphasized" press="onSubmitRegister"/>
    </beginButton>
    <endButton>
      <Button text="Cancel" press="onCloseRegister"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
